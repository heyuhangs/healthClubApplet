page {
  background-color: #f5f5f5;
}
.goods-container {
  width: 100%;
  margin-top: 130rpx;
}

.header-container {
  background-color: #fff;
}

.iphone {
  margin-top: 180rpx;
}

.goods-box {
  width: 100%;
  height: 100px;
  margin-top: 15px;
  margin-bottom: 15px;
  box-sizing: border-box;
  padding: 0 7%;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}

.img-box {
  background-color: #f5f5f5;
  margin-top: 10px;
  margin-left: 10px;
  margin-right: 10px;
  margin-bottom: 10px;
  width: 80px;
  height: 80px;
  border-radius: 3px;
  float: left;
}

.img-box image {
  width: 80px;
  height: 80px;
  display: inline-block;
}

.goods-title {
  display: inline-block;
  box-sizing: border-box;
  padding-bottom: 10px;
  font-size: 28rpx;
  margin-top: 15px;
  width: 100%;
  color: #333;
  border-bottom: 1px solid #eee;
}

.good-money {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  /*color: #999;*/
  padding-top: 6px;
  color: #666;
  margin-top: 4px;
}
.good-money view{
  display: inline;
}

.title-opacity {
  float: right;
  font-size: 22rpx;
  margin-right: 10px;
  border: 1px solid #999;
  color: #999;
  padding: 1px 4px;
  border-radius: 3px;
}

.no-more-goods {
  text-align: center;
  margin-top: 50%;
}

.no-order-img {
  width: 110px;
  height: 110px;
}

.no-more-goods .text {
  font-size: 28rpx;
  color: #999;
  margin-top: -5px;
}
