.tab-item-list-info {
  width: 100%;
    box-sizing: border-box;
  padding-left: 10px;
  float: left;
  font-size: 30rpx;
  color: #333;
}
.list-info{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-info-title {
  display: inline-block;
  font-weight: 500;
    width: 80%;
  /*float: ledt;*/
  text-overflow: ellipsis;
  font-size: 37rpx;
  white-space: nowrap;
  overflow: hidden;
    text-overflow:ellipsis;
    /*background: goldenrod;*/
    white-space: nowrap;
}
.list-info-detail{
  font-size: 48rpx;
    color: #EE7600;
}

.list-info-money {
  font-size: 27rpx;
  color: #333;
    line-height: 25px;
}
.list-infi-money-date{
    color: #666;
}

.money-min, .money-max {
  display: inline-block;
}

.money-min text {
  font-size: 28rpx;
  color: #b5272d;
}

.money-max {
  padding-left: 15px;
  color: #999;
  text-decoration: line-through;
}

.list-info-info {
  font-size: 26rpx;
  color: #b5272d;
}

.status-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.status-box .status-label {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.status-box .status-label.active {
  color: #b5272d;
  border-bottom: 6rpx solid #b5272d;
}

.status-box .status-label .red-dot {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 125rpx;
  top: 20rpx;
  background-color: #b5272d;
  border-radius: 50%;
}
