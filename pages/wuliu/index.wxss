.container {
  width: 100%;
  height: 100%;
  margin-top: 130rpx;
}

.header-container {
  background-color: #fff;
}

.iphone {
  margin-top: 180rpx;
}

page {
  background-color: #f2f2f2;
}
.shImg{
  display: inline-block;
  vert-align: middle;
  width: 55px;
  height: 55px;
  margin-right: 20px;
}
.label{
  line-height: 54px;
}
.top-sec {
  background-color: #fff;
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 24rpx 30rpx;
  border-top: 2rpx solid #f5f5f5;
}
.text{
  line-height: 47px;
}

.top-sec .a-row {
  display: flex;
  font-size: 28rpx;
  line-height: 54rpx;
}

.top-sec .a-row .label {
  color: #666;
  margin-right: 30rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
}
.texts textarea{
  height: 300px !important;
  font-size: 27rpx;
  /*line-height: 50px;*/
  line-height: 25px;
}

.btnOnSub .i-btn-error {
  background-color:#b5272d !important;
  color:#fff;
  font-size:30rpx;
}
.sec-wrap {
  width: 100%;
  background-color: #fff;
  padding-top: 10rpx;
  margin-top: 10rpx;
}
.botom-inp{
  margin-top: 5px;
}
.btn{
  margin-top: 10%;
}
.details-info {
  position: relative;
  width: 100%;
  margin-top: 20rpx;
  overflow: hidden;
}

.details-info .a-row {
  display: flex;
  position: relative;
  z-index: 4;
  width: 93%;
  margin: 0 auto;
  margin-bottom: 14rpx;
  border-bottom: 2rpx dashed #f5f5f5;
  padding-bottom: 10rpx;
}

.details-info .a-row .info {
  font-size: 28rpx;
  display: flex;
}

.date-box {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 20rpx;
  width: 530rpx;
}

.info .text {
  color: #999;
  width: 25%;
  text-align: right;
  font-size: 22rpx;
}

.dot {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.default-dot {
  background: #ddd;
  width: 14rpx;
  height: 14rpx;
  border-radius: 100%;
}

.active-dot {
  border: 2rpx solid #e64340;
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}

.active-dot .yuan-red {
  background: #e64340;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}

.none {
  text-align: center;
  padding-top: 100rpx;
  padding-bottom: 120rpx;
  font-size: 30rpx;
  color: #333;
}
